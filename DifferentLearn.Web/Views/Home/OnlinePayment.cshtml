
@{
    ViewData["Title"] = "نتیجه پرداخت";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li style="margin:5px;"><a href="/">خانه</a></li>
        <li style="margin:5px;">/</li>
        <li style="margin:5px;"><a href="#">نتیجه پرداخت</a></li>
    </ul>
</nav>
<div class="container">
    @if (ViewBag.IsSuccess == true)
    {
        <div class="alert alert-success">
            <h2>پرداخت با موفقیت انجام گردید.</h2>
            <p>کد پیگیری : @ViewBag.Code</p>
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <h2>پرداخت با خطا روبرو شد!</h2>
           
        </div>
    }
</div>

