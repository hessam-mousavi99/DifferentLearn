                                            <li>
                                                @if (item.IsFree || IsUserIncourse)
                                                {
                                                    <a href="/downloadfile/@item.EpisodeId">
                                                        @item.EpisodeTitle :
                                                    </a>
                                                }
                                                else
                                                {
                                                    <h6>@item.EpisodeTitle : </h6>
                                                }

