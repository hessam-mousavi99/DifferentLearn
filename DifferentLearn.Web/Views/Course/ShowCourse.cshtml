                                                {
                                                    <i class="text text-success">رایگان</i>
                                                }
                                                else
                                                {
                                                    <i class=" text text-danger">نقدی</i>
                                                }
                                                <span>@item.EpisodeTime</span>
                                            </li>
                                        }

                                    </ul>
                                </div>
