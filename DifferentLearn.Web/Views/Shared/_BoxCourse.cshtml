@using DifferentLearn.Core.Convertors;
@model DifferentLearn.Core.DTOs.Course.ShowCourseListViewItem
<div class="courses-single-card mlr-5" data-aos="fade-up"
     data-aos-duration="1000">
    <div class="course-img">
        <a href="/ShowCourse/@Model.CourseId"><img src="/assets/images/courseavatar/image/@Model.ImageName"></a>
        <div class="courses-prices">
          @if (Model.Price==0)
            {
                <p style="margin-right: 4px;margin-bottom: 0;">رایگان</p>
            }
            else
            {
                <p style="margin-right: 4px;margin-bottom: 0;">تومان</p>
                <p> @Model.Price.ToString("#,0") </p>
            }

        </div>
    </div>
    <div class="courses-content">
       
        <a href="/ShowCourse/@Model.CourseId"><h3> @Model.Title </h3></a>
        <div class="time">
            <ul class="d-flex justify-content">
                <i class="flaticon-calendar"></i>
                <li>شروع دوره از @Model.StartDate.ToShamsi()</li> &nbsp;&nbsp;
            </ul>
        </div>
    </div>
</div>