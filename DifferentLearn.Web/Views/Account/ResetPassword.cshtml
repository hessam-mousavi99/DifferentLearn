@model DifferentLearn.Core.DTOs.ResetPasswordViewModel

@{
    ViewData["Title"] = "کلمه عبور جدید";
}
<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li style="margin:5px;"><a href="/">خانه</a></li>
        <li style="margin:5px;">/</li>
        <li style="margin:5px;"><a href="resetpassword">کلمه عبور جدید</a></li>
    </ul>
</nav>
<div class="account-area ">
    <div class="container">
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <div class="register">
                    <h3>کلمه عبور جدید</h3>
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="ActiveCode"/>
                        <div class="form-group">
                            <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور">
                            <span class="text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="RePassword" type="password" class="form-control" placeholder="تکرار کلمه عبور">
                            <span class="text-danger" asp-validation-for="RePassword"></span>
                        </div>

                        <button type="submit" class="default-btn btn">ثبت</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-3"></div>
        </div>
    </div>
</div>