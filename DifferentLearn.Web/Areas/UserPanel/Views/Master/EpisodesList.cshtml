@using DifferentLearn.Data.Entites.Course;
@model IEnumerable<CourseEpisode>
@{
    ViewData["Title"] = "مدیریت جلسات";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li style="margin:5px;"><a href="/">خانه</a></li>
        <li style="margin:5px;">/</li>
        <li style="margin:5px;"><a href="">@ViewData["Title"]</a></li>
    </ul>
</nav>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_Sidebar" />
                <div class="col-md-8 col-sm-8 col-xs-12">

                    <section class="user-account-content">
                        <header style="display:flex; justify-content:space-between; align-items:center;">
                            <h1> @ViewData["Title"] </h1>
                            <a class="btn btn-success" asp-action="AddEpisode" asp-controller="Master" asp-route-courseid="@ViewBag.ID">افزودن قسمت جدید</a>
                        </header>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>زمان</th>
                                    <th>وضعیت</th>
                                    <th>دستورات</th>


                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.EpisodeTitle</td>
                                        <td>@item.EpisodeTime</td>
                                        <td>
                                            @if (item.IsFree)
                                            {
                                                <span class="text text-success">
                                                    رایگان
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text text-danger">
                                                    نقدی
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <a class="btn btn-success" asp-action="DownloadFile" asp-controller="Course" asp-route-episodeid="@item.EpisodeId">دانلود</a>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>

                    </section>
                </div>
            </div>
        </div>
    </div>
</main>


