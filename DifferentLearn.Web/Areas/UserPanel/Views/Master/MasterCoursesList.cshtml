@using DifferentLearn.Data.Entites.Course;
@model IEnumerable<Course>
@{
    ViewData["Title"] = "لیست دوره های مدرس";
}

<nav aria-label="breadcrumb">
    <ul class="breadcrumb">
        <li style="margin:5px;"><a href="/">خانه</a></li>
        <li style="margin:5px;">/</li>
        <li style="margin:5px;"><a href="/userpanel/Master/MasterCoursesList">@ViewData["Title"]</a></li>
    </ul>
</nav>

<main>
    <div class="container">
        <div class="user-account">
            <div class="row">
                <partial name="_Sidebar" />
                <div class="col-md-8 col-sm-8 col-xs-12">

                    <section class="user-account-content">
                        <header><h1> @ViewData["Title"] </h1></header>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>عنوان</th>
                                    <th>وضعیت</th>
                                    <th>تعداد جلسات</th>
                                    <th>دستورات</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.CourseTitle</td>
                                        <td>@item.CourseStatus.StatusTitle</td>
                                        <td>@item.CourseEpisodes.Count()</td>
                                        <td>
                                            <a class="btn btn-info" asp-action="EpisodesList" asp-controller="Master" asp-route-courseid="@item.CourseId">مدیریت جلسات</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </section>
                </div>
            </div>
        </div>
    </div>
</main>
