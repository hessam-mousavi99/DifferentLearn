@page
@using DifferentLearn.Core.Convertors;
@model DifferentLearn.Web.Pages.Admin.Roles.IndexModel
@{
    ViewData["Title"] = "مدیریت نقش ها";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header col-12">

                <div class="col-4">
                    <h3 class="card-title">لسیت نقش ها</h3>
                </div>
            </div>
            <div class="row "style="margin:5px;">
                <a  class=" btn btn-success btn-sm" href="/Admin/Roles/CreateRole">افزودن نقش جدید</a>
            </div>
            <!-- /.card-header -->
            <div class="card-body table-responsive p-0">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th>نام نقش</th>
                            <th>دستورات</th>
                        </tr>
                        @foreach (var role in Model.RolesList)
                        {
                            <tr>
                                <td>@role.RoleTitle</td>
                                <td>
                                    <a href="/admin/roles/editrole/@role.RoleId" class="btn btn-warning btn-sm">ویرایش</a>
                                    <a href="/admin/roles/Deleterole/@role.RoleId" class="btn btn-danger btn-sm">حذف</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->

        </div>
        <!-- /.card -->
    </div>


</div>
